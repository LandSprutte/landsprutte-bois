{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "plugins": [{ "name": "nexus/typescript-language-service" }],
    "strict": true,
    "rootDir": ".",
    "noEmit": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "esModuleInterop": true
  },
  "include": [
    "types.d.ts",
    "."
  ]
}